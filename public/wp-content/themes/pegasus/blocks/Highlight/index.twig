<section class="Highlight {{ block.align is empty ? 'max-w-[1360px] mx-auto' }} relative px-5 md:pl-[42px] md:pr-[34px] pt-[34px] md:pt-[59px] md:rounded-[5px] pb-[99px] md:pb-[44px] md:pr-0 {{block.textColor ? 'text-' ~ block.textColor }}" style="{{block.fontSize ? 'font-size:var(--wp--preset--font-size--' ~ block.fontSize ~ ');' }}">

    <div class="flex flex-col gap-2.5 pb-[83px] md:pb-12 pt-5 border-t border-dark relative z-10">
        <div>{{title}}</div>
        {% if subtitle is not empty %}<div>{{subtitle}}</div>{% endif %}
    </div>
    <div class="flex gap-[83px] flex-col md:flex-row md:items-end md:pr-[34px] relative z-10">
        <div class="md:order-last md:basis-1/3 px-7 md:px-0 md:flex md:justify-end">
            {{ pegasus_picture(primary_image, 'large',
                { img_atts: {
                    class: "object-center object-cover border-4 border-yellow-01 border-solid"
                }}
            ) }}
        </div>
        <InnerBlocks class="md:basis-2/3" />
    </div>

    {% if background_image is not empty %}
        <div class="absolute inset-0 w-full h-full object-cover z-0">
            {{ pegasus_picture(background_image, 'full',
                { img_atts: {
                    class: "block h-full md:h-auto object-center object-cover"
                }}
            ) }}
        </div>
    {% endif %}
</section>